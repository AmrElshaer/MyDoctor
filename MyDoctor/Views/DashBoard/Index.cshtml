@using MYDoctor.Core.Application.ViewModel
@model DashBoardViewModel

@{
    ViewData["Title"] = "Home";
}

<!--**********************************
          Content body start
      ***********************************-->
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">MyDoctor</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Home</a></li>
            </ol>
        </div>
    </div>


    <div class="container-fluid">


        <!--Start Slider-->
        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        <div class="bootstrap-carousel">
                            <div data-ride="carousel" class="carousel slide" id="carouselExampleCaptions">

                                <div class="carousel-inner" style="max-height: 450px">
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="/Content/img/kendal-L4iKccAChOc-unsplash.jpg" alt="Medicin">

                                    </div>
                                    <div class="carousel-item">
                                        <img alt="Doctors" class="d-block w-100" src="/Content/img/jamie-street-vcn2ndJ5LwE-unsplash.jpg">

                                    </div>
                                    <div class="carousel-item active">
                                        <img alt="HealthFood" class="d-block w-100" src="/Content/img/freestocks-nss2eRzQwgw-unsplash.jpg">

                                    </div>
                                </div>
                                <a data-slide="prev" href="#carouselExampleCaptions" class="carousel-control-prev"><span class="carousel-control-prev-icon"></span> <span class="sr-only">Previous</span> </a><a data-slide="next" href="#carouselExampleCaptions"
                                                                                                                                                                                                                 class="carousel-control-next"><span class="carousel-control-next-icon"></span> <span class="sr-only">Next</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--End Slider-->
        <!--Start Department-->
        @await Html.PartialAsync("_Category", Model.Categories)
        <!--End Department-->
        <!--Start Relative Department-->
        @await Html.PartialAsync("_RelativeCategory", Model.RelativeCategories)
        <!--End Relative Department-->
        <!--Start Medicin-->
        @await Html.PartialAsync("_Medicin", Model.Medicins)
        <!--End Relative Medicin-->
        <!--Start Disease-->
        @await Html.PartialAsync("_Disease", Model.Diseases)
        <!--End  Disease-->
        <!--Start Disease-->
        @await Html.PartialAsync("_Doctor", Model.Doctors)
        <!--End  Disease-->

    </div>


</div>

<!--**********************************
    Content body end
***********************************-->
