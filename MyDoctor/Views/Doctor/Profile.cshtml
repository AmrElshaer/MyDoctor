                            <img class="mr-3" src="~/images/@Model.ImagePath" width="80" height="80" alt="">
                            <div class="media-body">
                                <h3 class="mb-0">@Model.Name</h3>
                                <p class="text-muted mb-0">@Model.Country</p>
                            </div>
                        </div>
                        @if (User.Identity.Name != Model.Email)
                        {
                            <div class="row mb-5">

                                <div class="col-12 text-center">
                                    <a class="btn btn-danger px-5" asp-action="MessageDetail" asp-controller="Messages" asp-route-fromName="@Model.Email">Message</a>
                                </div>
                            </div>
                        }


                        <h4>About Me</h4>
                        <p class="text-muted">@Model.Others</p>
                        <ul class="card-profile__info">
                            <li class="mb-1"><strong class="text-dark mr-4">Mobile</strong> <span>@Model.Telephone</span></li>
                            <li><strong class="text-dark mr-4">Email</strong> <span>@Model.Email</span></li>
                            <li><strong class="text-dark mr-4">Department</strong> <span>@Model.Category.Category</span></li>
                        </ul>
                    </div>
                </div>
