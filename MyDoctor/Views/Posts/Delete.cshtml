@model MyDoctor.Models.Posts

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@Model.specific</h6>
    </div>
    <div class="card-body">
        @Model.Description
    </div>
</div>

<div>
   
    
    <form asp-action="Delete" id="DeleteBost">
        <input type="hidden" asp-for="Id" />
        <a href="javascript:document.getElementById('DeleteBost').submit()" class="btn btn-danger btn-circle">
            <i class="fas fa-trash"></i>
        </a>
       
        <a asp-action="Index">Back to List</a>
    </form>
</div>
