@model MyDoctor.Models.RelativeDisease

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>RelativeDisease</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                @{
                    List<string> AllDisease = TempData["AllDisease"] as List<string>;

                }
                <label asp-for="DiseaseName" class="control-label"></label>
                <select asp-for="DiseaseName"  class="form-control">
                    @foreach (var item in AllDisease)
                    {
                        <option value="@item">@item</option>

                    }
                </select>
                <span asp-validation-for="DiseaseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiseaseAddress" class="control-label"></label>
                <input asp-for="DiseaseAddress" class="form-control" />
                <span asp-validation-for="DiseaseAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageOrvideo" class="control-label"></label>
                <input asp-for="ImageOrvideo" class="form-control" />
                <span asp-validation-for="ImageOrvideo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="subject" class="control-label"></label>
                <input asp-for="subject" class="form-control" />
                <span asp-validation-for="subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



