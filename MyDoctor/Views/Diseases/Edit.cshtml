@model MyDoctor.Models.Disease


    <div class="row">
        <div class="col-lg-8 mb-4">
            

           
            <!-- Illustrations -->
            <div class="row">
                <div class="col-lg-12 mb-4 card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">@Model.DiseaseName</h6>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <img class="img-fluid px-3 px-sm-4 mt-3 mb-4" style="width: 25rem;" src="@Model.Image" alt="">
                        </div>
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Subject</h6>
                        </div>
                        <p>@Model.Subject</p>
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Protection</h6>
                        </div>
                        <p>@Model.Protection</p>
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Medicin</h6>
                        </div>
                        <p>@Model.Medicin</p>
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Reasons</h6>
                        </div>
                        <p>@Model.Reasons</p>
                    </div>
                </div>
                <div class="col-lg-12">
                    @await Html.PartialAsync("_RelativeSubject", Model.DiseaseName)
                </div>
                <div class="col-lg-12">
                    @await Html.PartialAsync("_AppComment")


                </div>
            </div>
            
            


        </div>
        <div class="col-lg-4 mb-4">
            @await Html.PartialAsync("RelativeDiseaseIndex", Model.DiseaseName)
        </div>
    </div>
    <div class="row">



        
        <div class="lead col-sm-12 ">
            @await Html.PartialAsync("_AllComment", Model.DiseaseName)
        </div>
    </div>


