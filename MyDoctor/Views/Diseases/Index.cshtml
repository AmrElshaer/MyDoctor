@using MYDoctor.Core.Domain.Entities
@model (List<Disease> Diseases, string Name)
<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">MyDoctor</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Diseases</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Diseases</h4>
                        <div class="basic-form">
                            <form asp-controller="Diseases" asp-action="Index">
                                <div class="input-group mb-3">
                                    <input name="diseaseName" value="@Model.Name" type="text" class="form-control">
                                    <div class="input-group-append">
                                        <button class="btn btn-outline-dark" type="submit"><i style="font-size:20px" class="mdi mdi-magnify"></i></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Start Disease-->
        @await Html.PartialAsync("_Disease", Model.Diseases)
        <!--End  Disease-->
    </div>
    <!-- #/ container -->
</div>
<!--**********************************
    Content body end
***********************************-->
