@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using MYDoctor.Core.Application.IRepository
@using MYDoctor.Infrastructure.Identity
@using MYDoctor.Core.Domain.Common.Enum 
@using MYDoctor.Core.Application.Common.Enum 
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject ICategoryRepository CategoryRepository
@{
    var imagePath = User.FindFirstValue(Claims.ImagePath.ToString());

   
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>MYDoctor</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="/Content/img/favicon.ico">
    <link href="/Content/css/style.css" rel="stylesheet">

</head>

<body>
    <style>

        .avatar-icon {
            height: 2rem;
        }
        .icon-menu:before {
            content: "\e601";
        }
    </style>
    <!--*******************
    Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
    Preloader end
    ********************-->
    <div id="main-wrapper">

        <!--**********************************
        Nav header start
        ***********************************-->
        <div class="nav-header">
            <div class="brand-logo">
                <a asp-action="Index" asp-controller="DashBoard">

                    <b class="logo-abbr"><img src="/Content/img/HomeLogo.svg" style="max-width: 20px" /></b>
                    <span class="logo-compact">Second</span>
                    <span class="brand-title">
                        <img src="/Content/img/HomeLogo.svg" style="max-width: 47px" />
                    </span>
                </a>
            </div>
        </div>
        <!--**********************************
        Nav header end
        ***********************************-->
        <!--**********************************
        Header start
        ***********************************-->
        <div class="header">
            <div class="header-content clearfix">
                
                <div class="nav-control">
                    <div class="hamburger">
                        
                        <span class="toggle-icon"><i class="icon-menu"></i></span>
                    </div>
                </div>
                <div class="header-left">
                    <div class="input-group icons">
                        <input type="search" id="GeneralSearch" class="form-control" placeholder="Search Dashboard" aria-label="Search Dashboard">

                    </div>
                    <div id="SearchContent">

                    </div>
                </div>
                <div class="header-right">
                    <ul class="clearfix">
                        <li class="icons dropdown">
                            <a href="javascript:void(0)" data-toggle="dropdown" id="MessageIcon">
                                <i class="mdi mdi-email-outline"></i>
                                <span class="badge badge-pill gradient-1" id="NumberOfMessage"></span>
                            </a>
                            <div class="drop-down animated fadeIn dropdown-menu">
                                <div class="dropdown-content-body">
                                    <ul id="Messages">
                                    </ul>

                                </div>
                            </div>
                        </li>
                        <li class="icons dropdown">
                            <a href="javascript:void(0)" data-toggle="dropdown" id="Notification">
                                <i class="mdi mdi-bell-outline"></i>
                                <span class="badge badge-pill gradient-2" id="NumberOfNotification"></span>
                            </a>
                            <div class="drop-down animated fadeIn dropdown-menu dropdown-notfication">

                                <div class="dropdown-content-body">
                                    <ul id="NotificationContent">
                                    </ul>

                                </div>
                            </div>
                        </li>
                        <li class="icons dropdown d-none d-md-flex">
                            <a href="javascript:void(0)" class="log-user" data-toggle="dropdown">
                                <span>English</span>  <i class="fa fa-angle-down f-s-14" aria-hidden="true"></i>
                            </a>
                            <div class="drop-down dropdown-language animated fadeIn  dropdown-menu">
                                <div class="dropdown-content-body">
                                    <ul>
                                        <li><a href="javascript:void()">English</a></li>
                                        <li><a href="javascript:void()">Dutch</a></li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                        <li class="icons dropdown">
                            <div class="user-img c-pointer position-relative" data-toggle="dropdown">
                                <span class="activity active"></span>
                                @if (User.Identity.IsAuthenticated)
                                {

                                    <img src="/images/@imagePath" height="40" width="40" alt="">
                                }
                                else
                                {
                                    <img src="~/images/LoginImage.jpg" height="40" width="40" alt="">
                                }

                            </div>
                            <div class="drop-down dropdown-profile animated fadeIn dropdown-menu">
                                <div class="dropdown-content-body">
                                    <ul>
                                        <li>
                                            <a asp-action="Profile" asp-controller="UserProfile" asp-route-id=""><i class="icon-user"></i> <span>Profile</span></a>
                                        </li>
                                        <li>
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm">
                                                    <a href="javascript:document.getElementById('logoutForm').submit()"><i class="icon-key"></i> <span>Logout</span></a>
                                                </form>
                                            }
                                            else
                                            {
                                                <a asp-area="Identity" asp-page="/Account/Login"><i class="icon-key"></i> <span>Login</span></a>
                                            }


                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!--**********************************
        Header end ti-comment-alt
        ***********************************-->
        <!--**********************************
        Sidebar start
        ***********************************-->
        <div class="nk-sidebar">
            <div class="nk-nav-scroll">
                <ul class="metismenu" id="menu">
                    @if (User.Identity.IsAuthenticated && User.IsInRole(Roles.Admin.ToString()))
                    {
                        <li class="nav-label">Dashboard</li>
                        <li>
                            <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                                <i class="icon-speedometer menu-icon"></i><span class="nav-text">Dashboard</span>
                            </a>
                            <ul aria-expanded="false">
                                <li><a asp-controller="DashBoard" asp-action="Index" asp-area="Admin">Admin</a></li>
                                <li><a asp-controller="DashBoard" asp-action="Index" asp-area="">Client</a></li>
                            </ul>
                        </li>

                        <li>
                            <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                                <img style="max-width:20px" src="~/Content/img/equalizer (1).png" /><span class="nav-text ml-2">Control Panel</span>
                            </a>
                            <ul aria-expanded="false">
                                <li><a asp-controller="Category" asp-action="Index" asp-area="Admin">Departments</a></li>
                                <li><a asp-controller="CategoryRelativies" asp-action="Index" asp-area="Admin">RelativesDepartment</a></li>
                                <li><a asp-controller="Diseases" asp-action="Index" asp-area="Admin">Diseases</a></li>
                                <li><a asp-controller="Doctor" asp-action="Index" asp-area="Admin">Doctors</a></li>
                                <li><a asp-controller="Medicin" asp-action="Index" asp-area="Admin">Medicins</a></li>
                                <li><a asp-controller="Country" asp-action="Index" asp-area="Admin">Country</a></li>

                            </ul>
                        </li>
                    }

                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-grid menu-icon"></i><span class="nav-text">Departments</span>
                        </a>
                        <ul aria-expanded="false">
                            @foreach (var beatyandHealthy in CategoryRepository.GetAll())
                            {
                                <li><a asp-controller="BeatyandHealthies" asp-action="Details" asp-area="" asp-route-id="@beatyandHealthy.Id">@beatyandHealthy.Category</a></li>
                            }

                        </ul>
                    </li>
                    <li>
                        <a class="has-arrow" href="javascript:void()" aria-expanded="false">
                            <i class="icon-envelope menu-icon"></i> <span class="nav-text">Message</span>
                        </a>
                        <ul aria-expanded="false">
                            <li><a href="./email-inbox.html">Notification</a></li>
                            <li><a asp-controller="Messages" asp-area="" asp-action="Index">Support</a></li>

                        </ul>
                    </li>

                    <li>
                        <a asp-controller="Doctor" asp-action="Index" asp-area="">
                            <img style="max-width:17px" src="/Content/img/doctor.svg" /><span class="nav-text ml-2">Doctors</span>
                        </a>

                    </li>

                    <li>
                        <a asp-controller="Medicins" asp-action="Index" asp-area="">
                            <img style="max-width:17px" src="/Content/img/medicine.svg" /><span class="nav-text ml-2">Medicin</span>
                        </a>

                    </li>

                    <li>
                        <a asp-controller="Diseases" asp-action="Index" asp-area="">
                            <img style="max-width:17px" src="/Content/img/heartbeat.svg" /><span class="nav-text ml-2">Disease</span>
                        </a>

                    </li>
                </ul>
            </div>
        </div>
        <!--**********************************
        Sidebar end
        ***********************************-->
        <!--
        Start Content
        -->
        @RenderBody()
        <!---
        End Content
        -->
    </div>
    <!--**********************************
    Scripts
    ***********************************-->
    <script src="/Content/plugins/common/common.min.js"></script>
    <script src="/Content/js/custom.min.js"></script>
    <script src="/Content/js/settings.js"></script>
    <script src="/Content/js/gleek.js"></script>
    <script src="/Content/js/styleSwitcher.js"></script>
    <script src="/Content/js/dashboard-1.js"></script>
    <script src="~/js/GeneralSearch.js"></script>
        <script src="~/js/signalr/dist/browser/signalr.js"></script>
        <script src="~/js/trackTableNotifiy.js"></script>
    <script src="~/js/Notification.js"></script>
    <script src="~/js/ReciveMessage.js"></script>
    <script src="~/js/UpdateMessage.js"></script>
    @RenderSection("Scripts", required: false)

</body>


</html>


