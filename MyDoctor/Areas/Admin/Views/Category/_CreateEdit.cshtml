@model MyDoctor.Models.BeatyandHealthy
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="post" asp-action="CreateEdit" id="CreateEdit">
                    <div class="form-group" style="display: none">
                        <label for="id-name" class="col-form-label">id</label>
                        <input name="Id" type="text" class="form-control" id="id-name" value="@Model.Id">
                    </div>
                    <div class="form-group" style="display: none">
                       
                        <input name="CreateDate"  type="text" class="form-control" id="CreateDate" value="">
                    </div>
                    <div class="form-group" >
                        <label for="recipient-name" class="col-form-label">Name</label>
                        <input name="Catagory" value="@Model.Catagory" type="text" class="form-control" id="category-name">
                    </div>
                    <div class="form-group">
                        <label for="image-name" class="col-form-label">Image Url</label>
                        <input name="Image" value="@Model.Image" type="text" class="form-control" id="image-name">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="document.getElementById('CreateEdit').submit()">Save</button>
            </div>
        </div>
    </div>
</div>


