@model IEnumerable<BeatyandHealthy>
@{
    ViewData["Title"] = "DashBoard";
}
<!--**********************************
        Sidebar end
    ***********************************-->
<!--**********************************
    Content body start
***********************************-->
<div class="content-body">

    <div class="row page-titles mx-0">
        <div class="col p-md-0">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="javascript:void(0)">Admin</a></li>
            </ol>
        </div>
    </div>
    <!-- row -->

    <div class="container-fluid">
        <div class="row">
            @foreach (var category in Model)
            {
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="card-title"><i class="icon-grid menu-icon mr-2"></i><span>@category.Category</span></h4>
                            @{ 
                                var categoryId = category.Id;
                                var home = $"home{categoryId}";
                                var doctor = $"doctor{categoryId}";
                                var medicin = $"medicin{categoryId}";
                                var relative = $"relative{categoryId}";
                                var post = $"post{categoryId}";
                                var disease = $"disease{categoryId}";
                            }
                            <!-- Nav tabs -->
                            <div class="default-tab">
                                <ul class="nav nav-tabs mb-3" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#@home">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#@doctor">Doctors</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#@relative">Relatives Department</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#@medicin">Medicins</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#@post">Posts</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#@disease">Diseases</a>
                                    </li>
                                </ul>
                                <div class="tab-content">
                                    <div class="tab-pane fade show active" id="@home" role="tabpanel">
                                        <div class="row">
                                            <div class="col-6">
                                                <img class="img-responsive"  src="@category.Image" />

                                            </div>
                                            <div class="col-6">
                                                

                                                <p><img style="max-width:17px" src="/Content/img/doctor.svg" /><span class="nav-text ml-2">Doctors</span><span class="ml-2 mr-2">:</span><span class="badge badge-pill gradient-2">@category.Doctors.Count()</span></p>
                                                <p><img style="max-width:17px" src="/Content/img/medicine.svg" /><span class="nav-text ml-2">Medicin</span><span class="ml-2 mr-2">:</span><span class="badge gradient-3 badge-pill gradient-1">@category.Medicins.Count()</span></p>
                                                <p><img style="max-width:17px" src="/Content/img/heartbeat.svg" /><span class="nav-text ml-2">Disease</span><span class="ml-2 mr-2">:</span><span class="badge badge-pill gradient-2">@category.Diseases.Count()</span></p>
                                                <p><img src="~/Content/img/post.png" /><span class="nav-text ml-2">Post</span><span class="ml-2 mr-2">:</span><span class="badge gradient-3 badge-pill gradient-1">@category.Posts.Count()</span></p>
                                                <p><img style="max-width: 17px" src="/Content/img/clock.svg" /> <span class="ml-2 mr-2">:</span>@category.CreateDate.ToString()</p>
                                            </div>
                                        </div>
                                        
                                        
                                    </div>
                                    <div class="tab-pane fade" id="@doctor">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered zero-configuration">
                                                <thead>
                                                    <tr>
                                                        <th>Image</th>
                                                        <th>Name</th>
                                                        <th>Kind</th>
                                                        <th>Telephone</th>
                                                    </tr>
                                                </thead>
                                               <tbody>
                                                   @foreach (var doctorItem in category.Doctors)
                                                   {
                                                       <tr>
                                                           <td><img style="max-width:80px" src="/images/@doctorItem.ImagePath" class=" rounded-circle mr-3" alt=""></td>
                                                           <td>@doctorItem.Name</td>
                                                           <td>@doctorItem.Kind</td>
                                                           <td>@doctorItem.Telephone</td>
                                                       </tr>
                                                   }
                                               </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <th>Image</th>
                                                        <th>Name</th>
                                                        <th>Kind</th>
                                                        <th>Telephone</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="@relative">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered zero-configuration">
                                                <thead>
                                                    <tr>
                                                        <th>Image</th>
                                                        <th>Address</th>
                                                        <th>Content</th>
                                                       
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var relativeItem in category.RelativeofBeatyandhealthies)
                                                    {
                                                        <tr>
                                                            <td><img style="max-width:50px" src="@relativeItem.ImageOrVideo" class=" rounded-circle mr-3" alt=""></td>
                                                            <td>@relativeItem.Address</td>
                                                            <td>@relativeItem.Subject.MaxString(150,".....")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <th>Image</th>
                                                        <th>Address</th>
                                                        <th>Content</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="@medicin">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered zero-configuration">
                                                <thead>
                                                    <tr>
                                                        <th>Image</th>
                                                        <th>Name</th>
                                                        <th>Affects</th>
                                                        <th>Indications</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var medicinItem in category.Medicins)
                                                    {
                                                        <tr>
                                                            <td><img style="max-width:50px" src="@medicinItem.Image" class=" rounded-circle mr-3" alt=""></td>
                                                            <td>@medicinItem.Name</td>
                                                            <td>@medicinItem.Affects.MaxString(150,".....")</td>
                                                            <td>@medicinItem.Indications.MaxString(150,".....")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <th>Image</th>
                                                        <th>Name</th>
                                                        <th>Affects</th>
                                                        <th>Indications</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="@post">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered zero-configuration">
                                                <thead>
                                                    <tr>
                                                        <th>User</th>
                                                        <th>Content</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var postItem in category.Posts)
                                                    {
                                                        <tr>
                                                            <td><img style="max-width:60px" src="/images/@postItem.User.ImagePath" class=" rounded-circle mr-3" alt="">@postItem.User.Name</td>
                                                            <td>@postItem.Content.MaxString(250, ".....")</td>
                                                            
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <th>User</th>
                                                        <th>Content</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="@disease">
                                        <div class="table-responsive">
                                            <table class="table table-striped table-bordered zero-configuration">
                                                <thead>
                                                    <tr>
                                                        <th>Subject</th>
                                                        <th>Reasons</th>
                                                        <th>Protection</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var diseaseItem in category.Diseases)
                                                    {
                                                    <tr>
                                                        <td><img style="max-width:50px" src="@diseaseItem.Image" class=" rounded-circle mr-3" alt="">@diseaseItem.Subject.MaxString(150,"...")</td>
                                                        <td>@diseaseItem.Reasons.MaxString(150, ".....")</td>
                                                        <td>@diseaseItem.Protection.MaxString(150, ".....")</td>

                                                    </tr>
                                                    }
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <th>Subject</th>
                                                        <th>Reasons</th>
                                                        <th>Protection</th>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
    <!-- #/ container -->
</div>
@section Scripts{
    <script src="~/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/Content/vendor/datatables/datatable-basic.min.js"></script>
}
<!--**********************************
    Content body end
***********************************-->
