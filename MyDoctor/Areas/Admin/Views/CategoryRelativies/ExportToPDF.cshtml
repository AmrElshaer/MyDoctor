@model IEnumerable<RelativeofBeatyandhealthy>
@{
    ViewBag.Title = "Relative Category Report";
    Layout = "~/Areas/Admin/Views/Shared/_PdfReportLayout.cshtml";
}

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Address</th>
            <th scope="col">Subject</th>
            <th scope="col">Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Address</td>
                <td>@item.Subject.MaxString(20,"...")</td>
                <td>@item.BeatyandHealthy.Category</td>
            </tr>
        }

    </tbody>
</table>

