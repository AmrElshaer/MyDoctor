@using MYDoctor.Core.Domain.Entities
@using MYDoctor.Core.Application.IRepository
@model RelativeofBeatyandhealthy
@inject ICategoryRepository CategoryRepository
@inject IViewLocalizer ViewLocalizer
@{ Layout = null;}
<form method="post" asp-action="CreateEdit" id="CreateEdit" onsubmit="return jQueryAjaxPost(this);">
    <input asp-for="Id" type="hidden" value="@Model.Id">
    <div class="form-group">
        <label for="" class="col-form-label">@ViewLocalizer["Address"]</label>
        <input asp-for="Address" value="@Model.Address" class="form-control">
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group" style="display: none">
        <input name="CreateDate" type="text" class="form-control" id="CreateDate" value="">
    </div>
    <div class="form-group">
        <label for="BeatyandHealthId" class="col-form-label">@ViewLocalizer["Category"]</label>

        <select asp-for="BeatyandHealthId" class="form-control">

            @foreach (var category in CategoryRepository.GetAll())
            {

                <option value="@category.Id" label="@category.Category"></option>

            }
        </select>
    </div>

    <div class="form-group">
        <label for="ImageOrVideo" class="col-form-label">@ViewLocalizer["Media Url"]</label>
        <input asp-for="ImageOrVideo" value="@Model.ImageOrVideo" type="url" class="form-control">
        <span asp-validation-for="ImageOrVideo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Subject" class="col-form-label">@ViewLocalizer["Subject"]</label>
        <textarea type="text" class="form-control" asp-for="Subject">@Model.Subject</textarea>
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="col-md-6 offset-md-3">
            <input type="submit" value="Submit" class="btn btn-primary btn-block" />
        </div>
    </div>
</form>